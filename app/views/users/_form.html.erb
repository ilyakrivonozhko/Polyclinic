<%= form_with model: @user do |f| %>
    <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
        <%= f.label :name %>
        </div>

        <div class="col-sm-10">
        <%= f.text_field :name, placeholder: 'Name', class: 'form-control form-control-lg' %>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
        <%= f.label :surname %>
        </div>

        <div class="col-sm-10">
        <%= f.text_field :surname, placeholder: 'Surname', class: 'form-control form-control-lg' %>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
        <%= f.label :patronymic %>
        </div>

        <div class="col-sm-10">
        <%= f.text_field :patronymic, placeholder: 'Patronymic', class: 'form-control form-control-lg' %>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
        <%= f.label :email %>
        </div>

        <div class="col-sm-10">
        <%= f.email_field :email, placeholder: 'E-mail', class: 'form-control form-control-lg' %>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
        <%= f.label :phone_number %>
        </div>

        <div class="col-sm-10">
        <%= f.text_field :phone_number, placeholder: 'Phone number', class: 'form-control form-control-lg' %>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
        <%= f.label :password %>
        </div>

        <div class="col-sm-10">
        <%= f.password_field :password, class: 'form-control form-control-lg' %>
        </div>
    </div>

    <div class="mb-3 row">
        <div class="col-sm-2 col-form-label">
        <%= f.label :password_confirmation %>
        </div>

        <div class="col-sm-10">
        <%= f.password_field :password_confirmation, class: 'form-control form-control-lg' %>
        </div>
    </div>

    <%= f.submit "Register!", class: 'btn btn-primary btn-lg' %>
<% end %>