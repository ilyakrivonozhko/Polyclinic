<tr>
    <th scope="row"><%= user.id %></th>
    <td><%= user.name %></td>
    <td><%= user.surname %></td>
    <td><%= user.patronymic %></td>
    <td><%= user.phone_number %></td>
    <td><%= user.email %></td>
    <td><%= user.role %></td>
    <td><%= user.created_at %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(user), class: 'btn btn-secondary' %>
        <%= link_to 'Delete', admin_user_path(user), class: 'btn btn-danger',
            data: {method: :delete, confirm: "Are you sure?" } %></td>
</tr>